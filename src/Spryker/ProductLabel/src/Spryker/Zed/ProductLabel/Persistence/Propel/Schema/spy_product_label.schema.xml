<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" namespace="Orm\Zed\ProductLabel\Persistence" package="src.Orm.Zed.ProductLabel.Persistence" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd">
  <table name="spy_product_label" idMethod="native" identifierQuoting="true" phpName="SpyProductLabel">
    <column name="id_product_label" type="INTEGER" required="true" autoIncrement="true" primaryKey="true"/>
    <column name="name" type="VARCHAR" required="true"/>
    <column name="is_active" type="BOOLEAN" required="true" defaultValue="false"/>
    <column name="is_exclusive" type="BOOLEAN" required="true" defaultValue="false"/>
    <column name="is_published" type="BOOLEAN" required="false" defaultValue="false"/>
    <column name="is_dynamic" type="BOOLEAN" required="true" defaultValue="false"/>
    <column name="front_end_reference" type="VARCHAR" required="false"/>
    <column name="valid_from" type="TIMESTAMP" required="false"/>
    <column name="valid_to" type="TIMESTAMP" required="false"/>
    <column name="position" type="INTEGER" required="true"/>
    <behavior name="timestampable"/>
    <id-method-parameter value="spy_product_label_pk_seq"/>
    <unique name="spy_product_label-name">
      <unique-column name="name"/>
    </unique>
    <index name="idx-spy_product_label-position">
      <index-column name="position"/>
    </index>
  </table>
  <table name="spy_product_label_product_abstract" identifierQuoting="true" phpName="SpyProductLabelProductAbstract">
    <column
            name="id_product_label_product_abstract"
            type="INTEGER"
            required="true"
            primaryKey="true"
            autoIncrement="true"
    />
    <column name="fk_product_label" type="INTEGER" required="true"/>
    <column name="fk_product_abstract" type="INTEGER" required="true"/>

    <id-method-parameter value="spy_product_label_product_abstract_pk_seq"/>

    <foreign-key
            foreignTable="spy_product_label"
            phpName="SpyProductLabel"
            refPhpName="SpyProductLabelProductAbstract"
    >
      <reference local="fk_product_label" foreign="id_product_label"/>
    </foreign-key>

    <foreign-key
            foreignTable="spy_product_abstract"
            phpName="SpyProductAbstract"
            refPhpName="SpyProductLabelProductAbstract"
    >
      <reference local="fk_product_abstract" foreign="id_product_abstract"/>
    </foreign-key>

    <unique name="spy_product_label_product_abstract-fk_product_label-fk_product_abstract">
      <unique-column name="fk_product_label"/>
      <unique-column name="fk_product_abstract"/>
    </unique>

    <index name="idx-spy_product_label_product_abstract-fk_product_label">
      <index-column name="fk_product_label"/>
    </index>

    <index name="idx-spy_product_label_product_abstract-fk_product_abstract">
      <index-column name="fk_product_abstract"/>
    </index>
  </table>
  <table
          name="spy_product_label_localized_attributes"
          idMethod="native"
          identifierQuoting="true"
          phpName="SpyProductLabelLocalizedAttributes"
  >
    <column
            name="id_product_label_localized_attributes"
            type="INTEGER"
            required="true"
            primaryKey="true"
            autoIncrement="true"
    />
    <column name="fk_product_label" type="INTEGER" required="true"/>
    <column name="fk_locale" type="INTEGER" required="true"/>
    <column name="name" type="VARCHAR" required="false"/>

    <id-method-parameter value="spy_product_label_localized_attributes_pk_seq"/>

    <foreign-key
            foreignTable="spy_product_label"
            phpName="SpyProductLabel"
            refPhpName="SpyProductLabelLocalizedAttributes"
    >
      <reference local="fk_product_label" foreign="id_product_label"/>
    </foreign-key>

    <foreign-key foreignTable="spy_locale" phpName="SpyLocale" refPhpName="SpyProductLabelLocalizedAttributes">
      <reference local="fk_locale" foreign="id_locale"/>
    </foreign-key>

    <unique name="spy_product_label_localized_attributes-fk_product_label-fk_locale">
      <unique-column name="fk_product_label"/>
      <unique-column name="fk_locale"/>
    </unique>

    <index name="idx-spy_product_label_localized_attributes-fk_product_label">
      <index-column name="fk_product_label"/>
    </index>
  </table>
</database>
