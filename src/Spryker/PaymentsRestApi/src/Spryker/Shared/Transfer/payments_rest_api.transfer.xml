<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="RestCheckoutRequestAttributes">
        <property name="cart" type="RestQuoteRequest"/>
    </transfer>

    <transfer name="RestQuoteRequest">
        <property name="payments" type="RestShipment"/>
    </transfer>

    <transfer name="RestShipment">
        <property name="method" type="ShipmentMethod"/>
    </transfer>

    <transfer name="Quote">
        <property name="payment" type="Payment" deprecated="Use payments property instead."/>
        <property name="payments" type="Payment[]" singular="payment"/>
    </transfer>

    <transfer name="Payment">
        <property name="paymentSelection" type="string"/>
        <property name="isLimitedAmount" type="bool"/>
    </transfer>

</transfers>
