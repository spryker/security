{% set itemCount = items | length  %}

{% for item in items %}
  <tr>
    {% if loop.index == 1 %}
      {% embed '@OfferGui/View/boxes/order-item.twig' with {item: item, displayImage: true, displayTotals: true, group: true, rowCount: rowCount, bundleItem: bundleItem, itemCount: itemCount} %}{% endembed %}
    {% else %}
      {% embed '@OfferGui/View/boxes/order-item.twig' with {item: item, displayImage: false, displayTotals: false, group: false} %}{% endembed %}
    {% endif %}
  </tr>
  {% embed '@OfferGui/View/boxes/order-item-option.twig' with {item: item} %} {% endembed %}
{% endfor %}
