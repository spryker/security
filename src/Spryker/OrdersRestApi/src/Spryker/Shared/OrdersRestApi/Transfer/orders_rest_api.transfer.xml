<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="OrderRestAttributes">
        <property name="createdAt" type="string"/>
        <property name="totals" type="OrderRestTotalsAttributes"/>
        <property name="currencyIsoCode" type="string"/>
    </transfer>

    <transfer name="OrderDetailsRestAttributes">
        <property name="createdAt" type="string"/>
        <property name="totals" type="OrderRestTotalsAttributes"/>
        <property name="currencyIsoCode" type="string"/>
        <property name="items" type="OrderItemsRestAttributes[]" singular="item"/>
        <property name="expenses" type="OrderRestExpensesAttributes[]" singular="expense"/>
    </transfer>

    <transfer name="OrderItemsRestAttributes">
        <property name="name" type="string"/>
        <property name="sku" type="string"/>
        <property name="sumPrice" type="int"/>
        <property name="sumPriceToPayAggregation" type="int"/>
        <property name="quantity" type="int"/>
    </transfer>

    <transfer name="OrderRestTotalsAttributes">
        <property name="expenseTotal" type="int"/>
        <property name="discountTotal" type="int"/>
        <property name="taxTotal" type="int"/>
        <property name="subtotal" type="int"/>
        <property name="grandTotal" type="int"/>
        <property name="canceledTotal" type="int"/>
    </transfer>

    <transfer name="OrderRestExpensesAttributes">
        <property name="name" type="string"/>
        <property name="sumPrice" type="int"/>
    </transfer>

</transfers>
