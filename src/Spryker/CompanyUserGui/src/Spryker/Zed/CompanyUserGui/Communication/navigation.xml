<?xml version="1.0" encoding="UTF-8"?>
<config>
    <company-gui>
        <label>Company Account</label>
        <title>Company Account</title>
        <icon>fa-files-o</icon>
        <pages>
            <company-user-gui>
                <label>Company Users</label>
                <title>Company Users</title>
                <bundle>company-user-gui</bundle>
                <controller>list-company-user</controller>
                <action>index</action>
                <pages>
                    <create-company-user>
                        <label>Create Company User</label>
                        <title>Create Company User</title>
                        <bundle>company-user-gui</bundle>
                        <controller>create-company-user</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </create-company-user>
                    <edit-company-user>
                        <label>Edit Company User</label>
                        <title>Edit Company User</title>
                        <bundle>company-user-gui</bundle>
                        <controller>edit-company-user</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </edit-company-user>
                    <delete-company-user>
                        <label>Delete Company User</label>
                        <title>Delete Company User</title>
                        <bundle>company-user-gui</bundle>
                        <controller>delete-company-user</controller>
                        <action>delete</action>
                        <visible>0</visible>
                    </delete-company-user>
                    <confirm-delete-company-user>
                        <label>Confirm Delete Company User</label>
                        <title>Confirm Delete Company User</title>
                        <bundle>company-user-gui</bundle>
                        <controller>delete-company-user</controller>
                        <action>confirm-delete</action>
                        <visible>0</visible>
                    </confirm-delete-company-user>
                </pages>
            </company-user-gui>
        </pages>
    </company-gui>
    <customer>
        <label>Customers</label>
        <title>Customers</title>
        <icon>fa-users</icon>
        <uri>#</uri>
        <visible>1</visible>
        <pages>
            <customer>
                <label>Customers</label>
                <title>Customers</title>
                <bundle>customer</bundle>
                <controller>index</controller>
                <action>index</action>
                <visible>1</visible>
                <pages>
                    <customer-company-attach>
                        <label>Attach customer to company</label>
                        <title>Attach customer to company</title>
                        <bundle>company-user-gui</bundle>
                        <controller>create-company-user</controller>
                        <action>attach-customer</action>
                        <visible>0</visible>
                    </customer-company-attach>
                </pages>
            </customer>
        </pages>
    </customer>
</config>
