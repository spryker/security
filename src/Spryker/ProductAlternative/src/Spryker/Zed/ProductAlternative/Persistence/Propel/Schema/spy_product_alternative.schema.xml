<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\ProductAlternative\Persistence" package="src.Orm.Zed.ProductAlternative.Persistence">

    <table name="spy_product_alternative" phpName="SpyProductAlternative">
        <column name="id_product_alternative" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>

        <column name="fk_product" type="INTEGER" required="true"/>
        <column name="fk_product_concrete_alternative" type="INTEGER"/>
        <column name="fk_product_abstract_alternative" type="INTEGER"/>

        <foreign-key name="spy_product_alternative_product_concrete-fk_product"
                     foreignTable="spy_product" phpName="ProductConcrete">
            <reference local="fk_product" foreign="id_product"/>
        </foreign-key>

        <foreign-key name="spy_product_alternative_product_concrete_alternative-fk_product"
                     foreignTable="spy_product" phpName="ProductConcreteAlternative">
            <reference local="fk_product_concrete_alternative" foreign="id_product"/>
        </foreign-key>

        <foreign-key name="spy_product_alternative_product_abstract_alternative-fk_product_abstract"
                     foreignTable="spy_product_abstract" phpName="ProductAbstractAlternative">
            <reference local="fk_product_abstract_alternative" foreign="id_product_abstract"/>
        </foreign-key>

        <id-method-parameter value="spy_product_alternative_pk_seq"/>
    </table>

</database>
