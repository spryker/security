{% if eventsGroupedByItem[orderItem.IdSalesOrderItem] | length > 0 %}
    {% for event in eventsGroupedByItem[orderItem.IdSalesOrderItem] %}
        <a class="btn btn-primary btn-sm trigger-order-single-event"
           data-id-item="{{ orderItem.idSalesOrderItem }}"
           data-id-sales-order="{{ orderItem.fkSalesOrder }}"
           data-id-reclamation="{{ reclamation.idSalesReclamation }}"
           data-event="{{ event }}" href="#">{{ event }}
        </a>
    {% endfor %}
{% else -%}
    -
{%- endif %}
