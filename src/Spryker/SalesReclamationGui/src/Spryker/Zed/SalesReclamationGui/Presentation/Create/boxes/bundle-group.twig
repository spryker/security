{% set itemCount = items | length  %}

{% for orderItem in items %}
  <tr>
    {% if loop.index == 1 %}
      {% embed '@SalesReclamationGui/Create/boxes/order-item.twig' with {
          orderItem: orderItem,
          displayImage: true,
          displayTotals: true,
          group: true,
          rowCount: rowCount,
          bundleItem: bundleItem,
          itemCount: itemCount
      } %}{% endembed %}
    {% else %}
      {% embed '@SalesReclamationGui/Create/boxes/order-item.twig' with {
          orderItem: orderItem,
          displayImage: false,
          displayTotals: false,
          group: false
      } %}{% endembed %}
    {% endif %}
  </tr>
  {% embed '@SalesReclamationGui/Create/boxes/order-item-option.twig' with {orderItem: orderItem} %} {% endembed %}
{% endfor %}
