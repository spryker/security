<?xml version="1.0" encoding="UTF-8"?>
<config>
    <product>
        <pages>
            <products>
                <label>Products</label>
                <title>Products</title>
                <bundle>product-management</bundle>
                <controller>index</controller>
                <action>index</action>
                <pages>
                    <product-create>
                        <label>Create a Product</label>
                        <title>Create a Product</title>
                        <bundle>product-management</bundle>
                        <controller>add</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </product-create>

                    <product-view>
                        <label>View Product</label>
                        <title>View Product</title>
                        <bundle>product-management</bundle>
                        <controller>view</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </product-view>

                    <product-edit>
                        <label>Edit Product</label>
                        <title>Edit Product</title>
                        <bundle>product-management</bundle>
                        <controller>edit</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </product-edit>

                    <product-concrete-view>
                        <label>View Concrete Product</label>
                        <title>View Concrete Product</title>
                        <bundle>product-management</bundle>
                        <controller>view</controller>
                        <action>variant</action>
                        <visible>0</visible>
                    </product-concrete-view>

                    <product-concrete-edit>
                        <label>Edit Concrete Product</label>
                        <title>Edit Concrete Product</title>
                        <bundle>product-management</bundle>
                        <controller>edit</controller>
                        <action>variant</action>
                        <visible>0</visible>
                    </product-concrete-edit>
                </pages>
            </products>

        </pages>
    </product>
</config>
