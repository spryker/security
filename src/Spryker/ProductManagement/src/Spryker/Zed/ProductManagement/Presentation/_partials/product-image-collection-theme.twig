{% block product_image_collection_widget %}
    <div class="row">
        <div class="image-collection col-lg-12">
            <div class="col-lg-6">
                <div class="form-group">
                    {% if form.external_url_small.vars.value == false %}
                        {% do form.image_preview.setRendered %}
                    {% endif %}
                    {{ form_widget(form.image_preview) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.external_url_small) }}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    {% if form.external_url_large.vars.value == false %}
                        {% do form.image_preview_large_url.setRendered %}
                    {% endif %}
                    {{ form_widget(form.image_preview_large_url) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.external_url_large) }}
                </div>
            </div>
            <div class="col-lg-12">
                {{ form_rest(form) }}
            </div>
            <div class="col-lg-12">
                <a href="#" class="btn btn-outline btn-remove safe-submit remove-image-collection">
                    <i class="fa fa-trash"></i>{{ 'Delete image' | trans }}
                </a>
            </div>
            <div class="col-lg-12">
                <hr>
            </div>
        </div>
    </div>
{% endblock %}