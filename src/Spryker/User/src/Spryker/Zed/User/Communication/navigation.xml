<?xml version="1.0"?>
<config>
    <acl>
        <pages>
            <user>
                <label>User</label>
                <title>User</title>
                <bundle>user</bundle>
                <controller>index</controller>
                <action>index</action>
                <icon>fa-user</icon>
                <pages>
                    <user-create>
                        <label>Create new User</label>
                        <title>Create new User</title>
                        <bundle>user</bundle>
                        <controller>edit</controller>
                        <action>create</action>
                        <visible>0</visible>
                    </user-create>

                    <user-edit>
                        <label>Edit User</label>
                        <title>Edit User</title>
                        <bundle>user</bundle>
                        <controller>edit</controller>
                        <action>update</action>
                        <visible>0</visible>
                    </user-edit>

                    <user-confirm-delete>
                        <label>Delete User</label>
                        <title>Delete User</title>
                        <bundle>user</bundle>
                        <controller>edit</controller>
                        <action>confirm-delete</action>
                        <visible>0</visible>
                    </user-confirm-delete>
                </pages>
            </user>
        </pages>
    </acl>
</config>
