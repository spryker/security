{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Update user #' ~ idUser   %}

{% block action %}
    {{ backActionButton('/user', 'List Users' | trans) }}
    {{ createActionButton('/user/edit/create', 'Add User' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(userForm) }}
            {{ form_widget(userForm) }}

            <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Update' | trans }}" />
            {{ form_end(userForm) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
