{% extends '@Gui/Layout/layout.twig' %}
 {% set widget_title = 'Company role deletion confirmation' %}
 {% block head_title widget_title %}
{% block section_title widget_title %}
 {% block action %}
     {{ backActionButton(app.request.headers.get('referer'), 'Back' | trans) }}
 {% endblock %}
 {% block content %}
     {% embed '@Gui/Partials/widget.twig' %}
         {% block widget_content %}
             <p>You are trying to delete company role: <b>{{ companyRoleTransfer.name }}</b></p>
             <p>It will be deleted from everywhere</p>
             <div>
                 <a href="{{ app.request.headers.get('referer') }}" class="btn btn-back">{{ 'Cancel' | trans}}</a>
                 <a href="{{ url('/company-role-gui/delete-company-role/delete', {'id-company-role': companyRoleTransfer.idCompanyRole}) }}" class="btn btn-danger safe-submit">{{ 'Delete company role' | trans}}</a>
             </div>
         {% endblock %}
     {% endembed %}
 {% endblock %}