{{ form_start(form) }}
{% for child in form %}
    <div class="form-group">

        {% if "hidden" not in child.vars.block_prefixes %}
            {{ form_label(child) }}
            {{ form_errors(child) }}
        {% endif %}

        {% if child.vars.attr.template_path is defined %}
            {% include child.vars.attr.template_path with {'form': child} %}
        {% else %}
            {{ form_widget(child) }}
        {% endif %}
    </div>
{% endfor %}
<input type="submit" class="btn btn-primary safe-submit" value="{{ 'Submit' | trans }}" />
{{ form_end(form) }}
