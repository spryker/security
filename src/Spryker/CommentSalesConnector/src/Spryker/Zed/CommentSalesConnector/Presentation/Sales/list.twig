{% embed '@Gui/Partials/widget.twig' with { widget_title: 'Comments to Order' | trans } %}

    {% block widget_content %}

        {% block head_css %}
            <link rel="stylesheet" href="/assets/css/spryker-zed-comment-sales-connector-main.css">
        {% endblock %}

        {% if order.commentThread %}
            <div class="comment-wrapper">
                {% for comment in order.commentThread.comments %}
                    <div class="comment-box">
                        <p class="comment-title">
                            {{ comment.customer.firstName }} {{ comment.customer.lastName }} @
                            <span>
                                {{ comment.createdAt | formatDateTime }}
                                {% if comment.isUpdated %}
                                    ({{ 'edited' | trans }})
                                {% endif %}
                            </span>
                        </p>

                        <p>{{ comment.message }}</p>

                        {% for commentTag in comment.commentTags %}
                            <span class="comment-tag">{{ commentTag.name }}</span>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {{ 'Order has no comments' | trans }}
        {% endif %}

        {% block footer_js %}
            <script src="/assets/js/spryker-zed-comment-sales-connector-main.js"></script>
        {% endblock %}

    {% endblock %}

{% endembed %}
