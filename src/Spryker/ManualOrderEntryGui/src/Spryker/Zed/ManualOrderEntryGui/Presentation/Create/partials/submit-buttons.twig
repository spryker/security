
{% if lastForm.vars.id == 'voucher' %}
    {% set submitBtnValue = 'Redeem' | trans %}
{% else %}
    {% set submitBtnValue = 'Submit' | trans %}
{% endif %}

{% if lastForm.vars.id == 'summary' %}
    {% set nextStepBtnValue = 'Submit Order' | trans %}
{% else %}
    {% set nextStepBtnValue = 'Next Step ->' | trans %}
{% endif %}

{%
    if lastForm.vars.id != firstForm.vars.id
%}
    <input type="submit" class="btn btn-info safe-submit previousStepBtn" value="{{ '<- Prev Step' | trans }}" name="{{ previousStepName }}" />
{% endif %}

{%
    if lastForm.vars.id != 'products'
      and lastForm.vars.id != 'summary'
%}
    <input type="submit" class="btn btn-primary safe-submit submitBtn" value="{{ submitBtnValue }}" />
{% endif %}

<input type="submit" class="btn btn-info safe-submit nextStepBtn" value="{{ nextStepBtnValue }}" name="{{ nextStepName }}" />
