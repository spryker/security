{% extends '@ManualOrderEntryGui/_layout/layout.twig' %}

{% set widget_title = 'Create Order' | trans %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Create Order' | trans } %}
        {% block widget_content %}
            {{ form_start(checkoutForm) }}
            {{ form_widget(checkoutForm) }}

            <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(checkoutForm) }}
        {% endblock %}
    {% endembed %}

{% endblock %}
