<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Payment">
        <property name="idSalesPayment" type="int"/>
        <property name="paymentProvider" type="string"/>
        <property name="paymentMethod" type="string"/>
        <property name="paymentSelection" type="string"/>
        <property name="amount" type="int"/>
        <property name="isLimitedAmount" type="bool" />
    </transfer>

    <transfer name="Quote">
        <property name="payment" type="Payment" deprecated="Use payments property instead." />
        <property name="payments" type="Payment[]" singular="payment"/>
    </transfer>

    <transfer name="Order">
        <property name="payments" type="Payment[]" singular="payment"/>
        <property name="currencyIsoCode" type="string" />
    </transfer>

    <transfer name="SalesPayment">
        <property name="fkSalesOrder" type="int" />
        <property name="paymentProvider" type="string" />
        <property name="paymentMethod" type="string" />
    </transfer>

    <!-- TODO consider how to deal with the following: -->
    <!-- these two transfers can probably be merged. PaymentInformation is contained in SalesPayment,
     but still a reasonable object: It contains information about a payment method,
     whether is a used on or an available one or whatever (PaymentInformation is more versatile)
     -->

    <transfer name="PaymentInformation">
        <property name="provider" type="string" />
        <property name="method" type="string" />
    </transfer>

    <transfer name="PaymentMethods">
        <property name="availableMethods" singular="availableMethod" type="PaymentInformation[]" />
    </transfer>

    <transfer name="Totals">
        <property name="priceToPay" type="int"/>
    </transfer>

</transfers>
