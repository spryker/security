{% set chartType = 'chart' %}
{% set chartData = [] %}
{% set maxLabeLength = 10 %}

{% for index, trace in data.traces %}
    {#{% set labels = trace.values %}#}
    {% set isPie = (trace.type == 'pie') %}
    {% set xLabels = isPie ? 'labels' : 'x' %}
    {% set yValues = isPie ? 'values' : 'y' %}
    {% set dataTrace = {
        name: (trace.name),
        type: (trace.type | default('bar')),
        (xLabels): (trace.labels),
        (yValues): (trace.values)
    } %}

    {% if trace.type == 'bar' and data.key == 'top-orders' %}
        {% set values = [] %}
        {% set titles = [] %}

        {% for key, value in trace.values %}
            {% set values = values|merge([value|length > 20 ? value|slice(0, 20) ~ 'â€¦ ' : value ~ ' ']) %}
            {% set titles = titles|merge(['Count orders: ' ~ trace.labels[key] ~ '<br>Title: ' ~ value]) %}
        {% endfor %}

        {% set dataTrace = {
            name: trace.name,
            type: trace.type,
            x: trace.labels,
            y: values,
            text: titles,
            hoverinfo: 'text',
            textposition: 'middle left',
            orientation: 'h'
        } %}

        {% set maxLabeLength = 24 %}
    {% endif %}

    {% set chartData = chartData | merge([dataTrace]) %}
{% endfor %}

{% include '@Chart/_partials/plotly-chart.twig' with {
    chartType: chartType,
    layout: layout,
    data: data,
    maxLabeLength: maxLabeLength,
    chartData: chartData
} %}
