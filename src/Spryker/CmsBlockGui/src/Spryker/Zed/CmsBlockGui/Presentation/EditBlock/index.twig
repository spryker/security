{% extends '@CmsBlockGui/_layout/layout.twig' %}

{% set widget_title = 'Edit CMS Block:' | trans ~ ' ' ~ cmsBlock.idCmsBlock %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {% set redirectUrl = url('/cms-block-gui/edit-block', {'id-cms-block' : idCmsBlock}) %}
    {{ editActionButton(url('/cms-block-gui/edit-glossary', {'id-cms-block': idCmsBlock}), 'Edit placeholders' | trans) }}
    {{ include ('@CmsBlockGui/_partial/activate-button.twig', { 'id-cms-block': idCmsBlock, 'isActive': cmsBlockForm.vars.data.isActive}) }}
    {{ backActionButton('/cms-block-gui/list-block', 'Back to CMS' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'CMS Block' | trans } %}
        {% block widget_content %}

            {{ form_start(cmsBlockForm) }}
            {{ form_widget(cmsBlockForm) }}

            <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(cmsBlockForm) }}

        {% endblock %}
    {% endembed %}

{% endblock %}

