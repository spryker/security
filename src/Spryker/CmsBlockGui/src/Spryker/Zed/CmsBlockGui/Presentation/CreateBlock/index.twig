{% extends '@CmsBlockGui/_layout/layout.twig' %}

{% set widget_title = 'Create CMS Block' | trans %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ backActionButton('/cms-block-gui/list-block', 'Back to CMS' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'CMS Block' | trans } %}
        {% block widget_content %}
            {{ form_start(cmsBlockForm) }}
                {% form_theme cmsBlockForm _self %}

                {{ form_widget(cmsBlockForm) }}

                {% block _cms_block_id_product_abstracts %}
                    {% include cmsBlockForm.id_product_abstracts.vars.attr.template_path with {'form': cmsBlockForm.id_product_abstracts} %}
                {% endblock %}

                {{ form_widget(cmsBlockForm.id_product_abstracts) }}

                <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(cmsBlockForm) }}

        {% endblock %}
    {% endembed %}

{% endblock %}
