{% extends '@Gui/Layout/layout.twig' %}

{% set page_title = 'Spryk' %}
{% block head_title %}
    {{ page_title | trans }}
{% endblock %}
{% block section_title %}
    {{ page_title | trans }}
{% endblock %}

{% block action %}
{% endblock %}

{% block content %}
    {% for application, spryks in sprykDefinitions %}
        <h2>{{ application | trans }}</h2>
        <table class="table">
        {% for spryk, sprykInfo in spryks %}
            <tr{% if sprykInfo.priority == 1 %} class="bg-info"{% endif %}>
                <td style="width: 40%;"><a href="/spryk-gui/build?spryk={{ spryk }}">{{ sprykInfo.humanized | trans }}</a></td>
                <td style="width: 50%;">{{ sprykInfo.description | trans }}</td>
                <td><a href="/spryk-gui/graph?spryk={{ spryk }}">{{ 'Show graph' | trans }}</a></td>
            </tr>
        {% endfor %}
        </table>
    {% endfor %}
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script type="application/javascript" src="/assets/js/spryker-zed-spryk-gui-main.js"></script>
{% endblock %}
