{% extends '@Gui/Layout/layout.twig' %}

{% if widget_title is not defined %}
    {% set widget_title = 'Translation details' %}
{% endif %}

{% block head_title widget_title %}
{% block section_title 'EditContent Item' %}

{% block action %}
    {{ backActionButton('/content-gui/list-content', 'Back to Content Items' | trans) }}
{% endblock %}

{% block content %}
    <div class="col-xs-12 col-md-6">
        <div class="col-xs-12 col-md-12">
            <h2>Add Abstract Product list</h2>
        </div>
        {{ form_start(contentForm, {attr: {novalidate: 'novalidate'}}) }}
        <div class="col-xs-12 col-md-6">
            {{ form_row(contentForm.name) }}
        </div>
        <div class="col-xs-12 col-md-6">
            {{ form_row(contentForm.description) }}
        </div>
        <div class="col-xs-12 col-md-12">
        {{ tabs(contentTabs, {'contentForm' : contentForm} ) }}
        </div>
        {{ form_end(contentForm) }}
    </div>
{% endblock %}
