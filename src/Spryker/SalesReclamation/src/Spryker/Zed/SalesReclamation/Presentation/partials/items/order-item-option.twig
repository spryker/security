
{% for productOption in orderItem.productOptions %}
    <tr class="addition-row">
        <td></td>
        <td>+ <span class="label">{{ 'Option' | trans }}</span></td>
        <td>
            <div>
                <a target="_blank" href="{{ url('/product-option/view/index', {'id-product-option-group': productOption.idGroup}) }}">{{ productOption.value }}</a>
            </div>
            <div class="sku">
              {{ 'Sku' | trans }}: {{ productOption.sku }}
            </div>
        </td>
        <td>

            <div>
                {% embed '@Sales/Detail/boxes/discounted-price.twig' with {subtotal: productOption.unitPrice, priceToPay: productOption.unitPrice - productOption.unitDiscountAmountFullAggregation | default(0)} %} {% endembed %}
            </div>
            <div class="tax-info">incl. {{ productOption.taxRate|default(0) }} % tax </div>
        </td>
        <td colspan="4"></td>
    </tr>
{% endfor %}
