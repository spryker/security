{% embed '@Gui/Partials/widget.twig' %}
    {% block widget_title %}
        <h5>
            {{ 'Order' | trans }}
            <a href="{{ url('/sales/detail', {'id-sales-order': reclamation.order.idSalesOrder}) }}">
                {{ reclamation.order.orderReference }}
            </a>
            {{ 'items' | trans }}:
        </h5>
    {% endblock %}
    {% block widget_header_content %}
        {{ 'Reclamation state' | trans }}: {{ reclamation.status | trans }}
    {% endblock %}

    {% block widget_content %}

        <table class="footable table toggle-arrow-tiny" data-qa="order-item-list">
            <thead>
            <tr class="text-left">
                <th colspan="2">{{ 'Product' | trans }}</th>
                <th>{{ 'Unit Price' | trans }} <small>({{ reclamation.order.priceMode }})</small></th>
                <th>{{ 'Item total' | trans }}</th>
                <th>{{ 'State' | trans }}</th>
                <th>{{ 'State' | trans }}</th>
                <th>{{ 'Actions' | trans }}</th>
            </tr>
            </thead>
            {% embed '@SalesReclamation/Detail/boxes/no-group-items.twig' with {items: reclamation.reclamationItems} %}{% endembed %}
        </table>

    {% endblock %}

{% endembed %}
