{% extends '@CompanyUnitAddressGui/_layout/layout.twig' %}

{% set widget_title = 'Edit Company Unit Address:' | trans ~ ' ' ~ companyUnitAddress.address1 %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ backActionButton(url('/company-unit-address-gui/list-company-unit-address'), 'Back to Company Unit Addresses' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Company Unit Address' | trans } %}
        {% block widget_content %}

            {{ form_start(companyUnitAddressForm) }}
            {{ form_widget(companyUnitAddressForm) }}

            <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(companyUnitAddressForm) }}

        {% endblock %}
    {% endembed %}

{% endblock %}

