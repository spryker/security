<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\Product\Persistence" package="src.Orm.Zed.Product.Persistence">

    <table name="spy_product_abstract">
        <column name="lead_product" type="INTEGER" required="false"/>

        <foreign-key name="spy_product_abstract-lead_product" foreignTable="spy_product">
            <reference local="lead_product" foreign="id_product"/>
        </foreign-key>
    </table>

    <table name="spy_product">
        <column name="has_lead_product" type="INTEGER" required="false" default="0"/>
    </table>

</database>
