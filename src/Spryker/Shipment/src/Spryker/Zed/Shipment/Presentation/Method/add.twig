{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Add a shipment method' %}

{% block action %}
    {{ backActionButton('/shipment', 'List Shipment Methods' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}
            <div class="row">

                <div class="col-sm-6 b-r">
                    <h3 class="m-t-none m-b">{{ 'New Shipment Method' | trans }}</h3>

                    {{ form_start(form) }}

                        {{ form_row(form.fkShipmentCarrier) }}
                        {{ form_row(form.name) }}
                        {{ form_money_collection(form.prices) }}
                        {{ form_widget(form) }}

                        <input type="submit" class="btn btn-primary" value="{{ 'Add' | trans }}" />
                    {{ form_end(form) }}

                </div>
            </div>
        {% endblock %}

    {% endembed %}

{% endblock %}
