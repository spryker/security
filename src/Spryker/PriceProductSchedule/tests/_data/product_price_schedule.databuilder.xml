<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="PriceProductSchedule">
        <property name="priceProduct" type="PriceProduct"/>
    </transfer>

    <transfer name="PriceProductScheduleList">
        <property name="fk_user" type="string" dataBuilderRule="=1"/>
        <property name="isActive" type="bool" dataBuilderRule="=true"/>
        <property name="name" type="string" dataBuilderRule="unique()->sentence(5)"/>
    </transfer>

    <transfer name="PriceProduct">
        <property name="moneyValue" type="MoneyValue"/>
    </transfer>

    <transfer name="MoneyValue">
        <property name="netAmount" type="int" dataBuilderRule="numberBetween(1000, 10000)"/>
        <property name="grossAmount" type="int" dataBuilderRule="numberBetween(1000, 10000)"/>
    </transfer>

    <transfer name="PriceProductScheduleImport">
        <property name="netAmount" type="int" dataBuilderRule="numberBetween(1000, 10000)"/>
        <property name="grossAmount" type="int" dataBuilderRule="numberBetween(1000, 10000)"/>
        <property name="activeFrom" dataBuilderRule="=date('Y-m-d', '-1 year')"/>
        <property name="activeTo" dataBuilderRule="=date('Y-m-d', '+1 year')"/>
    </transfer>
</transfers>

