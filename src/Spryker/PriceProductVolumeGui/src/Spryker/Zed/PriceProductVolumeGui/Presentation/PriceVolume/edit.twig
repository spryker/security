{% extends '@Gui/Layout/layout.twig' %}

{% set page_title = 'Edit volume prices' %}
{% block head_title page_title %}
{% block section_title page_title %}

{% block action %}
{% endblock %}

{% block content %}

    {{ form_start(form) }}

    <div>
        Price Type: {{ price_product.priceType.name }}
    </div>
    <div>
        Currency: {{ price_product.moneyValue.currency.name }}
    </div>
    <div>
        Store: {{ store_name }}
    </div>

    <table class="table table--expand">
        <thead>
        <tr class="active">
            <th>{{ 'Quantity' | trans }}</th>
            <th>{{ 'Gross price' | trans }}</th>
            <th>{{ 'Net price' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {{ form_widget(form.idStore) }}
        {{ form_widget(form.idCurrency) }}
        {{ form_widget(form.idProductAbstract) }}
        {{ form_widget(form.idProductConcrete) }}

        <tr>
            <td>
                <input type="text" class="form-control" value="1" disabled>
            </td>
            <td>
                <div class="input-group">
                    <span class="input-group-addon">{{ price_product.moneyValue.currency.symbol }}</span>
                    <input type="text" class="form-control" value="{{ price_product.moneyValue.netAmount | money(false) }}" disabled>
                </div>
            </td>
            <td>
                <div class="input-group">
                    <span class="input-group-addon">{{ price_product.moneyValue.currency.symbol }}</span>
                    <input type="text" class="form-control" value="{{ price_product.moneyValue.grossAmount | money(false) }}" disabled>
                </div>
            </td>
        </tr>

        {% for volume in form.volumes %}
            <tr>
                <td>
                    {{ form_errors(volume.quantity) }}
                    {{ form_widget(volume.quantity) }}
                </td>
                <td>
                    {{ form_errors(volume.net_price) }}
                    {{ form_widget(volume.net_price) }}
                </td>
                <td>
                    {{ form_errors(volume.gross_price) }}
                    {{ form_widget(volume.gross_price) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}"/>

    {{ form_end(form) }}

{% endblock %}

{% block footer_js %}
{% endblock %}
