{% extends '@CompanyBusinessUnitGui/_layout/layout.twig' %}

{% set widget_title = 'Edit Company Business Unit' %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ backActionButton(url('/company-business-unit-gui/list-company-business-unit'), 'Back to Company Business Units' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
                {% set company = form.vars.value.company %}
                <div class="form-group">
                    <label class="control-label" for="company-business-unit_fk_company">Company: </label>
                    {{ company.name }}
                </div>

                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
