{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Product Sets' | trans %}
{% block section_title %}{{ widget_title }}{% endblock %}

{% block action %}
    {{ editActionButton(url('/product-set-gui/edit', {'id': productSetTransfer.idProductSet}), 'Edit' | trans) }}
    {% if productSetTransfer.isActive %}
        {{ removeActionButton(url('/product-set-gui/edit/deactivate', {'id': productSetTransfer.idProductSet}), 'Deactivate' | trans) }}
    {% else %}
        {{ viewActionButton(url('/product-set-gui/edit/activate', {'id': productSetTransfer.idProductSet}), 'Activate' | trans) }}
    {% endif %}
    {{ backActionButton(url('/product-set-gui'), 'List of Sets' | trans) }}
{% endblock %}

{% block content %}

    {% include '@ProductSetGui/View/_partials/general.twig' %}
