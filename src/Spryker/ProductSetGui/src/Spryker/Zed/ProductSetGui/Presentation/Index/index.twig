    {% endembed %}

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/spryker-zed-productset-main.css" />
{% endblock %}

{% block footer_js %}
    {{ parent() }}
{% endblock %}
