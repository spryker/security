{
  "name": "spryker/twig",
  "description": "Twig module",
  "license": "proprietary",
  "require": {
    "spryker/kernel": "^3.0.0",
    "spryker/symfony": "^3.0.0",
    "spryker/util-text": "^1.0.0",
    "spryker/zend": "^2.0.0",
    "twig/twig": "^1.20.0"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/config": "*",
    "spryker/silex": "*",
    "spryker/testify": "*"
  },
  "suggest": {
    "spryker/config": "If you want to use the TwigServiceProvider.",
    "spryker/silex": "If you want to use the TwigServiceProvider.",
    "spryker/symfony": "If you want to use the TwigServiceProvider."
  },
  "autoload": {
    "psr-0": {
      "Spryker": "src/"
    }
  },
  "autoload-dev": {
    "psr-0": {
      "Functional": "tests/",
      "Unit": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "3.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
