<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="AvailabilitySubscription">
        <property name="idAvailabilitySubscription" type="int" />
        <property name="sku" type="string" />
        <property name="email" type="string" />
        <property name="customerReference" type="string" />
        <property name="subscriptionKey" type="string" />
        <property name="locale" type="Locale" />
        <property name="store" type="Store" />
    </transfer>

    <transfer name="AvailabilitySubscriptionResponse">
        <property name="availabilitySubscription" type="AvailabilitySubscription" />
        <property name="product" type="ProductConcrete" />
        <property name="isSuccess" type="bool" default="true" />
        <property name="errorMessage" type="string" />
    </transfer>

    <transfer name="AvailabilitySubscriptionRequest">
        <property name="subscriptionKey" type="string" />
        <property name="sku" type="string" />
        <property name="email" type="string" />
        <property name="customerReference" type="string" />
    </transfer>

    <transfer name="Mail">
        <property name="availabilitySubscriptionMailData" type="AvailabilitySubscriptionMailData" />
    </transfer>

    <transfer name="AvailabilitySubscriptionMailDataTransfer">
        <property name="availabilitySubscription" type="AvailabilitySubscription" />
        <property name="availabilityUnsubscriptionLink" type="string" />
        <property name="productConcrete" type="ProductConcrete"/>
        <property name="productName" type="string"/>
        <property name="productUrl" type="string"/>
        <property name="productImageUrl" type="string"/>
    </transfer>

    <transfer name="AvailabilityNotificationData">
        <property name="sku" type="string"/>
        <property name="store" type="Store"/>
    </transfer>

    <transfer name="Customer">
        <property name="availabilitySubscriptionSkus" type="string[]" singular="availabilitySubscriptionSku"/>
    </transfer>

</transfers>
