<?xml version="1.0"?>
<database
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        name="zed"
        defaultIdMethod="native"
        xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
        namespace="Orm\Zed\AvailabilityNotification\Persistence"
        package="src.Orm.Zed.availability_notification.Persistence">

    <table name="spy_availability_subscription" idMethod="native" allowPkInsert="true">
        <column name="id_availability_subscription" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="sku" type="VARCHAR" size="255" required="true"/>
        <column name="email" type="VARCHAR" size="255" required="true"/>
        <column name="customer_reference" required="false" type="VARCHAR" size="255"/>
        <column name="subscription_key" required="true" type="VARCHAR" size="150"/>
        <column name="fk_store" required="true" type="INTEGER"/>
        <column name="fk_locale" required="true" type="INTEGER"/>

        <foreign-key name="spy_availability_subscription-fk_store" foreignTable="spy_store">
            <reference local="fk_store" foreign="id_store"/>
        </foreign-key>

        <foreign-key name="spy_availability_subscription-fk_locale" foreignTable="spy_locale">
            <reference local="fk_locale" foreign="id_locale"/>
        </foreign-key>

        <index name="spy_availability_subscription-index-subscription_key">
            <index-column name="subscription_key" />
        </index>

        <index name="spy_availability_subscription-sku">
            <index-column name="sku"/>
        </index>

        <unique name="spy_availability_subscription-sku-email-store">
            <unique-column name="email"/>
            <unique-column name="sku"/>
            <unique-column name="fk_store"/>
        </unique>

        <unique name="spy_availability_subscription-unique-subscription_key">
            <unique-column name="subscription_key"/>
        </unique>

        <behavior name="timestampable"/>

        <id-method-parameter value="id_availability_subscription_pk_seq"/>
    </table>
</database>
