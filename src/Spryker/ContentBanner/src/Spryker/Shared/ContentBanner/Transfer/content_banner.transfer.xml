<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ContentTypeContext">
        <property name="idContent" type="int" />
        <property name="term" type="string" />
        <property name="parameters" type="array" />
    </transfer>

    <transfer name="ContentBannerType">
        <property name="title" type="string" />
        <property name="subtitle" type="string" />
        <property name="imageUrl" type="string" />
        <property name="clickUrl" type="string" />
        <property name="altText" type="string" />
    </transfer>

    <transfer name="ContentBannerTerm">
        <property name="title" type="string" />
        <property name="subtitle" type="string" />
        <property name="imageUrl" type="string" />
        <property name="clickUrl" type="string" />
        <property name="altText" type="string" />
    </transfer>

    <transfer name="ContentValidationResponse">
        <property name="isSuccess" type="bool" />
        <property name="parameterMessages" type="ContentParameterMessage[]" />
    </transfer>

    <transfer name="ContentParameterMessage">
        <property name="parameter" type="string" />
        <property name="messages" type="Message[]" singular="message" />
    </transfer>

    <transfer name="Message">
        <property name="value" type="string"/>
    </transfer>
</transfers>
