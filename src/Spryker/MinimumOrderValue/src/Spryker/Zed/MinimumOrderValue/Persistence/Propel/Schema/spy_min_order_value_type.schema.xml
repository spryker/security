<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\MinimumOrderValue\Persistence"
          package="src.Orm.Zed.MinimumOrderValue.Persistence">

    <table name="spy_min_order_value_type" idMethod="native" allowPkInsert="true">
        <column name="id_min_order_value_type" required="true" type="INTEGER" primaryKey="true"
                autoIncrement="true"/>
        <column name="name" type="VARCHAR" required="true"/>

        <behavior name="timestampable"/>

        <id-method-parameter value="id_min_order_value_type_pk_seq"/>

        <unique name="spy_min_order_value_type-unique-name">
            <unique-column name="name"/>
        </unique>
    </table>

</database>
