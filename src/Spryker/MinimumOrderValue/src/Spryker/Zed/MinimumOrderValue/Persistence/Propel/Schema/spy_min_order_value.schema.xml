<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\MinimumOrderValue\Persistence"
          package="src.Orm.Zed.MinimumOrderValue.Persistence">

    <table name="spy_min_order_value" idMethod="native" allowPkInsert="true" phpName="SpyMinimumOrderValue">
        <column name="id_min_order_value" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="fk_min_order_value_type" type="INTEGER" required="true"/>
        <column name="fk_store" type="INTEGER" required="true"/>
        <column name="fk_currency" type="INTEGER" required="true"/>
        <column name="value" type="INTEGER" required="true"/>
        <column name="fee" type="INTEGER" required="false"/>

        <behavior name="timestampable"/>

        <id-method-parameter value="id_min_order_value_pk_seq"/>

        <foreign-key name="spy_min_order_value-fk_min_order_value_type"
                     foreignTable="spy_min_order_value_type" phpName="MinimumOrderValueType">
            <reference local="fk_min_order_value_type" foreign="id_min_order_value_type"/>
        </foreign-key>

        <foreign-key name="spy_min_order_value-fk_currency" foreignTable="spy_currency" phpName="Currency">
            <reference local="fk_currency" foreign="id_currency"/>
        </foreign-key>

        <foreign-key name="spy_min_order_value-fk_store" foreignTable="spy_store" phpName="Store">
            <reference local="fk_store" foreign="id_store"/>
        </foreign-key>
    </table>

</database>
