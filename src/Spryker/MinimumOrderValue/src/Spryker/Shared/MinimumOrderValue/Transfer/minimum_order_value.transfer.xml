<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="MinimumOrderValueType">
        <property name="idMinimumOrderValueType" type="int"/>
        <property name="key" type="string"/>
        <property name="thresholdGroup" type="string"/>
    </transfer>

    <transfer name="MinimumOrderValueThreshold">
        <property name="threshold" type="int"/>
        <property name="value" type="int" description="to be compared with threshold"/>
        <property name="fee" type="int"/>
        <property name="messageGlossaryKey" type="string"/>
        <property name="minimumOrderValueType" type="MinimumOrderValueType"/>
    </transfer>

    <transfer name="MinimumOrderValue">
        <property name="idMinimumOrderValue" type="int"/>
        <property name="minimumOrderValueThreshold" type="MinimumOrderValueThreshold"/>
        <property name="store" type="Store"/>
        <property name="currency" type="Currency"/>
        <property name="localizedMessages" type="MinimumOrderValueLocalizedMessage[]" singular="localizedMessage" />
    </transfer>

    <transfer name="MinimumOrderValueLocalizedMessage">
        <property name="message" type="string" />
        <property name="localeCode" type="string" />
    </transfer>

</transfers>
