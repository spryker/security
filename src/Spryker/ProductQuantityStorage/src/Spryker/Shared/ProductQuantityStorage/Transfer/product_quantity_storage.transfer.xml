<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ProductQuantityStorage">
        <property name="idProduct" type="int" />
        <property name="quantityMin" type="float" />
        <property name="quantityMax" type="float" />
        <property name="quantityInterval" type="float" />
    </transfer>

    <transfer name="Item">
        <property name="id" type="int" />
        <property name="quantity" type="int" />
    </transfer>

    <transfer name="ItemValidation">
        <property name="item" type="Item" />
        <property name="messages" type="Message[]" singular="Message" />
        <property name="suggestedValues" type="Item" />
    </transfer>

    <transfer name="Message">
        <property name="type" type="string"/>
        <property name="value" type="string"/>
        <property name="parameters" type="array"/>
    </transfer>

    <transfer name="ProductQuantity">
        <property name="idProduct" type="int" />
    </transfer>
</transfers>
