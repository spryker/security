<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ProductQuantityStorage">
        <property name="idProduct" type="int" />
        <property name="quantityMin" type="int" />
        <property name="quantityMax" type="int" />
        <property name="quantityInterval" type="int" />
    </transfer>

    <transfer name="Item">
        <property name="productConcrete" type="ProductConcrete" />
        <property name="quantity" type="int" />
    </transfer>

    <transfer name="ProductConcrete">
        <property name="idProductConcrete" type="int" />
    </transfer>

    <transfer name="ItemValidationResponse">
        <property name="messages" type="Message[]" singular="Message" />
        <property name="recommendedValues" type="Item" />
    </transfer>

    <transfer name="Message">
        <property name="type" type="string"/>
        <property name="value" type="string"/>
        <property name="parameters" type="array"/>
    </transfer>
</transfers>
