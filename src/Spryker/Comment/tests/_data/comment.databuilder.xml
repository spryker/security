<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="CommentRequest">
        <property name="ownerId" type="int" dataBuilderRule="numberBetween(100, 9999)" />
        <property name="ownerType" type="string" dataBuilderRule="slug" />
    </transfer>

    <transfer name="Comment">
        <property name="message" type="string" dataBuilderRule="sentence(5)" />
    </transfer>

    <transfer name="CommentTag">
        <property name="name" type="string" dataBuilderRule="slug" />
    </transfer>

</transfers>
