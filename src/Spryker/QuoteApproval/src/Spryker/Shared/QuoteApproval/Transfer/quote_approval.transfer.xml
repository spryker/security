<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Quote">
        <property name="approvals" type="QuoteApproval[]" singular="approval"/>
    </transfer>

    <transfer name="QuoteApproval">
        <property name="idQuoteApproval" type="int"/>
        <property name="approver" type="companyUser"/>
        <property name="status" type="string"/>
        <property name="createdAt" type="string"/>
        <property name="updatedAt" type="string"/>
    </transfer>

    <transfer name="CompanyUser">
    </transfer>

    <transfer name="QuoteApproveRequest">
        <property name="customer" type="Customer"/>
        <property name="quote" type="Quote"/>
        <property name="idApprover" type="int"/>
    </transfer>

    <transfer name="QuoteApprovalCancelRequest">
        <property name="customer" type="Customer"/>
        <property name="quote" type="Quote"/>
        <property name="idQuoteApproval" type="int"/>
    </transfer>

    <transfer name="QuoteUpdateRequestAttributes">
        <property name="isLocked" type="bool"/>
    </transfer>

</transfers>
