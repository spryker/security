{% extends '@Gui/Layout/layout.twig' %}

{% set action_name = (app.request.query.get('id') > 0) ? 'Edit search preferences' : 'Add attribute to search' %}

{% block section_title %}
    {{ action_name | trans }}
{% endblock %}
{% block head_title %}
    {{ action_name | trans }}
{% endblock %}

{% block action %}
    {{ backActionButton('/product-search/search-preferences', 'List of search preferences' | trans) }}
{% endblock %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' with { widget_title: action_name } %}
        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" id="{{ form.vars.name }}_submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}
    {% endembed %}
{% endblock %}
