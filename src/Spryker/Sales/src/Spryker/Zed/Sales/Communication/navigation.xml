<?xml version="1.0"?>
<config>
    <sales>
        <label>Sales</label>
        <title>Sales</title>
        <uri>/sales</uri>
        <icon>fa-shopping-cart</icon>
        <pages>
            <order-list>
                <label>Orders</label>
                <title>Orders</title>
                <bundle>sales</bundle>
                <controller>index</controller>
                <action>index</action>
                <visible>1</visible>
                <pages>
                    <order-view>
                        <label>Order Overview</label>
                        <title>Order Overview</title>
                        <bundle>sales</bundle>
                        <controller>detail</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </order-view>
                    <order-item>
                        <label>Order Items</label>
                        <title>Order Items</title>
                        <bundle>sales</bundle>
                        <controller>order</controller>
                        <action>items</action>
                        <visible>0</visible>
                    </order-item>
                    <edit-address>
                        <label>Edit Address</label>
                        <title>Edit Address</title>
                        <bundle>sales</bundle>
                        <controller>edit</controller>
                        <action>address</action>
                        <visible>0</visible>
                    </edit-address>
                </pages>
            </order-list>



            <order-matrix>
                <label>Order Matrix</label>
                <title>Order Matrix</title>
                <bundle>sales</bundle>
                <controller>matrix</controller>
                <action>index</action>
                <visible>1</visible>
            </order-matrix>

        </pages>
    </sales>
</config>
