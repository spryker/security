{% extends '@Gui/Layout/layout.twig' %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'File types settings' } %}

        {% block widget_content %}
            {{ fileTypeSettings | raw }}

            {{ form_start(fileTypeForm, {'method': 'POST'}) }}
            <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}"/>
            {{ form_end(fileTypeForm) }}
        {% endblock %}

    {% endembed %}

{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="/assets/js/spryker-zed-file-type.js"></script>
{% endblock %}