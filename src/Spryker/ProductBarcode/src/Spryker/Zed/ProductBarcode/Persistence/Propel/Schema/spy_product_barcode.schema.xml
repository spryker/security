<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\ProductBarcode\Persistence" package="src.Orm.Zed.ProductBarcode.Persistence">

    <table name="spy_product_barcode" idMethod="native" phpName="SpyProductBarcode">
        <column name="id_product_barcode" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_product" required="true" type="INTEGER"/>
        <column name="barcode" required="false" type="LONGVARCHAR" default="NULL"/>

        <unique name="spy_product_barcode-unique-fk_product">
            <unique-column name="fk_product"/>
        </unique>

        <foreign-key name="spy_product_barcode-fk_product" foreignTable="spy_product">
            <reference local="fk_product" foreign="id_product"/>
        </foreign-key>

        <id-method-parameter value="id_product_barcode_pk_seq"/>
    </table>

</database>
