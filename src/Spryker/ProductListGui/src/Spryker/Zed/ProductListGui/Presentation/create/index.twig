{% extends '@Gui/Layout/layout.twig' %}

{% block section_title 'Create Product List' | trans %}

{% block action %}
    {{ backActionButton(url('/product-list-gui'), 'Back to product list' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Create Product List' | trans } %}

        {% block widget_content %}
            {{ form_start(form) }}
                {{ tabs(productListFormTabs, {
                    'generalForm': form.productList,
                    'categoryForm': form.categories,
                }) }}

                <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Create' | trans }}" />
            {{ form_end(form) }}
        {% endblock %}

    {% endembed %}
{% endblock %}
